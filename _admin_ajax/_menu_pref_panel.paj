	id="ns1" 
	value="$_t._change" 
	onClick="javascript:
		f1 = jQuery('#n1').val()^;
		jQuery.get('/admin/_admin_ajax/__update_table.paj', {'t':'structure','f':'caption','fv':f1, 'id':'$form:id'}, function(){return false^;})
	"



/>
</td>
</tr>
